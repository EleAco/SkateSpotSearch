<main>
  <div class="first-content">
    <div class="box18">
      <h1>お問い合わせ</h1>
        <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
          <table class="table">
            <tr>
              <th>名前</th>
              <td>
                <%= f.hidden_field :name %>
                <%= @inquiry.name %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td>
                <%= f.hidden_field :mail %>
                <%= @inquiry.mail %>
              </td>
            </tr>
            <tr>
              <th>お問い合わせ内容</th>
              <td>
                <%= f.hidden_field :message %>
                <%= simple_format(@inquiry.message) %>
              </td>
            </tr>
          </table>
          <%= f.submit '送信' %>
        <% end %>
    </div>
  </div>
</main>