<!--form_forで作成する。jsリクエストが送られる。ajaxが起動。destory.js.erbを見つけることができる-->
<% if user_signed_in? %>
  <%= form_for @comment, url: map_comments_path(@map), remote: true do |f| %>
  <%= f.text_field :content, id:"comment-text-field" %>

  <%= button_tag type: 'submit', class: "comment-button" do %>
      <i class="fas fa-paper-plane"></i>
      コメントする
    <% end %>
  <% end %>

<% end %>