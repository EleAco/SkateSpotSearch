<h1 class="font-weight-bold text-center mb-5">ユーザー検索</h1>

<%= render'/shared/search_form_user' %>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3">

    <% @search_feeds.each do |result| %>
      <div class="col mb-4">
        <div class="card">
          <div class="card-body">

            <%= image_tag result.image.url %>
            <%= link_to result.name, user_path(@q, :'id' => "#{result.id}") %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>