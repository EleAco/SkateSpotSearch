<div class="main user-show">
  <div class="container">
    <div class="user">
      <!-- 以下で、ユーザー名を出力してください -->
      <h2><%= @user.name %></h2>
      <!-- 以下で、メールアドレスを出力してください -->
      <p><%= @user.email %></p>

      <%= image_tag @user.image.url %>　<!--false時、image_uploadsによるdefault_urlが起動 -->

    </div>
  </div>
</div>