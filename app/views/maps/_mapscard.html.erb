
        <div class="card">
          <div class="card-image"><%= link_to image_tag(post.picture.url, size: "273x275"),map_path(post), class: "link_to_text" %></div>
          <div class="card-info">
            <div class="card-title"><%= link_to post.title, map_path(post), class: "link_to_text" %></div>
            <div class="card-detail"><%= link_to post.content, map_path(post), class: "link_to_text" %></div>
          </div>
          <div class="card-social"><br>
            <ul>
              <div>
                <%= link_to image_tag(post.user.image.url, size:"45x45", class: "user-window") %>
                <%= link_to post.user.name, post.user ,class: "link_to_text"%>
              </div>
              <div>
                <small>作成日:</small>
                <span><%= post.created_at.strftime("%m/%d") %></span>
              </div>
                <%# いいねボタン挿入 %>
                <%= render partial: '/likes/likes_btn', locals: {post: post} %>
            </ul>
          </div>
        </div>