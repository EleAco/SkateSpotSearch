<% @maps.each do |map| %>
    <div class="col mb-4">
        <div class="card">
            <div class="card-body">

                <% if map.picture? %>
                <%= image_tag map.picture.url, class: "card-img-top" %>
                <% else %>
                <%= image_pack_tag 'media/images/no-image.jpg', class: "card-img-top" %>
                <% end %>

                <h5>
                <% if map.title? %>
                    <%= map.title %>
                <% else %>
                    タイトル
                <% end %>
                </h5>

                <p>
                <% if map.content? %>
                    <%= map.content %>
                <% else %>
                    あなたのお気に入りスポットです！
                <% end %>
                </p>

                <%= link_to 'Show', map %> | 
                <%= link_to 'Edit', edit_map_path(map) %> | 
                <%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %>

            </div>
        </div>
    </div>
<% end %>