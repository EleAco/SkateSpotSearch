<p id="notice"><%= notice %></p>


<div class="container">
  <% if @map.picture? %>
    <%= image_tag @map.picture.url %>
  <% else %>
    <%= image_pack_tag 'media/images/no-image.jpg' %>
  <% end %>
</div>

<h1>
<% if @map.title? %>
  <%= @map.title %>
<% else %>
  タイトル
<% end %>
</h1>

<p>
<% if @map.content? %>
  <%= @map.content %>
<% else %>
  あなたのお気に入りスポットです！
<% end %>
</p>

<p>
  <strong>住所: </strong>
  <%= @map.address %>
</p>

<p>
  <strong>緯度: </strong>
  <%= @map.latitude %>
</p>

<p>
  <strong>経度: </strong>
  <%= @map.longitude %>
</p>

<%= link_to 'Edit', edit_map_path(@map) %> |
<%= link_to 'Back', maps_path %>
