<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= current_user.name %>(ユーザー名)</h1>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Address</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @maps.each do |map| %>
            <tr>
              <td><%= map.id %></td>
              <td><%= map.address %></td>
              <td><%= map.latitude %></td>
              <td><%= map.longitude %></td>
              <td><%= link_to 'Show', map %></td>
              <td><%= link_to 'Edit', edit_map_path(map) %></td>
              <td><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
<%= link_to 'New Map', new_map_path %>