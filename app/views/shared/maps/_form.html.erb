<%= form_with(model: map, local: true) do |form| %>
    <% if map.errors.any? %>
      <div id="error_explanation">
          <h2><%= pluralize(map.errors.count, "error") %> prohibited this map from being saved:</h2>
          <ul>
            <% map.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
      <div>
        <ol>
          <div>
            <li>どんなスポット？<br><%= form.select :spot_style, [['スケートパーク', true], ['ストリートスポット', false]], class: "clear-button" %></li>
              <br>
            <li>ヘルメットの着用義務は？<br><%= form.select :helmet, [['有り', true],['無し', false]] %></li>
              <br>
            <li><%= form.text_field :title, placeholder: "タイトル(20字以内で)" %></li>
              <br>
            <li><%= form.text_area :content, size: "60x3", placeholder: "説明や備考があれば(400字以内で)", class: "li-top-position" %></li>
              <br>
            <li><%= form.file_field :picture, class: "btn slide-bg" do %><% end %></li>
              <br>
            <li>
              <%= button_tag type: 'submit', class: "btn-cubic" do %>
                <span class="hovering">
                  <i class="fas fa-paper-plane"></i>
                </span>
                <span class="default">投稿</span>
              <% end %>
            </li>
                <%= form.hidden_field :latitude, {id: "lat"} %>
                <%= form.hidden_field :longitude, {id: "lng"} %>
          </div>
        </ol>
      </div>
<% end %>